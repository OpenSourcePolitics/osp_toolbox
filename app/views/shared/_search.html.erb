<div class="row">
  <div class="col-8">
    <%= search_form_for @query, url: infer_path(path ||= nil), class: "d-flex" do |f| %>
      <%= f.search_field search_query,
                         class: "form-control me-2",
                         placeholder: t("placeholder",
                                        scope: "search",
                                        query: search_query_placeholder(search_query))
      %>
      <%= f.submit t("submit", scope: "search"), class: "btn btn-outline-secondary" %>
    <% end %>
  </div>

  <% if search_in_progress? %>
    <div class="col-2">
      <%= link_to t("clear", scope: "search"), empty_search_path, class: "btn btn-outline-warning" %>
    </div>
  <% end %>

  <div class="col-2 <%= search_in_progress? ? "" : "offset-2" %>">
    <%= yield %>
  </div>
</div>