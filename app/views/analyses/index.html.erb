<h1>Analyses for <%= @processing.title %></h1>

<%= render "shared/search", path: processing_analyses_path, search_query: :category_or_typename_cont do %>
  <%= link_to 'New Analysis', new_processing_analysis_path %>
<% end %>

<br/>

<table>
  <thead>
  <tr>
    <th><%= sort_link(@query, :updated_at) %></th>
    <th><%= sort_link(@query, :type) %></th>
    <th><%= sort_link(@query, :category) %></th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @analyses.each do |analysis| %>
    <tr>
      <td><%= analysis.updated_at %></td>
      <td><%= analysis.typename.capitalize %></td>
      <td><%= analysis.category %></td>
      <% if analysis.file.present? %>
        <td><%= link_to 'Show', processing_analysis_path(id: analysis) %></td>
      <% else %>
        <td>Analysis is not yet available</td>
      <% end %>
      <td><%= render "analyses/redo_analysis_button", analysis: analysis %></td>
      <td><%= link_to 'Destroy', processing_analysis_path(id: analysis), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @analyses %>
