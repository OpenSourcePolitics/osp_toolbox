<% analyses.each do |analysis| %>
  <% if analysis.file.present? %>
    <% if analysis.file.representable? %>
      <div>
        <%= image_tag analysis.file.representation(resize_to_limit: [800, 800]) %>
      </div>
      <%= link_to "Download", rails_blob_path(analysis.file, disposition: "attachment") %>
    <% else %>
      <%= link_to "Download", rails_blob_path(analysis.file, disposition: "attachment") %>
    <% end %>
  <% end %>
<% end %>