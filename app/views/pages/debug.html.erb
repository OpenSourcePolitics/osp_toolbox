<div class="container">
  <div class="row">
    <div class="col">
      <h1>Welcome to OSP toolbox</h1>
    </div>
  </div>
  <div class="row">
    <% @services.each do |service| %>
      <div class="col-4">
        <div class="card alert-success <%= "alert-danger" unless service[:status].code == "200" %>">
          <div class="card-body">
            <h2 class="card-title">Name: <%= service[:name] %></h2>
            <p class="card-text">
              Code: <%= service[:status].code %>
              <br>
              Body: <%= display_pretty_json(service[:status].body) %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
